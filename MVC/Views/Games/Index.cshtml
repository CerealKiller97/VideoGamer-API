@model IEnumerable<SharedModels.DTO.Game.Game>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

@if (TempData["error"] != null)
{
    <div class="alert-danger">
        <h3 class="text-center text-white py-4">@TempData["error"]</h3>
    </div>
}

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Engine)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PublisherName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeveloperName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AgeLabel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GameMode)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Engine)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PublisherName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DeveloperName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AgeLabel)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReleaseDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GameMode)
                </td>
                <td>
                   <img src="@Html.DisplayFor(model => item.ImagePath)" />
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="container">
    <div class="row">
        <div class="col-lg-4 offset-3">
            <nav aria-label="Page navigation example">
                <ul class="pagination justify-content-center">
                    @for (int i = 0; i < (int) ViewData["pagesCount"]; i++)
                    {
                        int current = i + 1;
                        var perPageQueryString = @Context.Request.Query["Page"].ToString();
                        <li class="page-item @(current.ToString() == perPageQueryString ? "active" : "")">
                            <a class="page-link" href="?Page=@current">@current</a>
                        </li>
                    }
                </ul>
            </nav>
        </div>
    </div>
</div>