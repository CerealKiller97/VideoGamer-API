@model SharedModels.DTO.Game.Game

@{
    ViewData["Title"] = "Details";
}

<h1>@Model.Name  - Details</h1>

<div>
    <h4>Game</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Engine)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Engine)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PublisherName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PublisherName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DeveloperName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DeveloperName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AgeLabel)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AgeLabel)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ReleaseDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ReleaseDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.GameMode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GameMode)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ImagePath)
        </dt>
        <dd class="col-sm-10">
            <img src="@Html.DisplayFor(model => model.ImagePath)" />
        </dd>

        <dd class="col-sm-10">
            <b>Genres</b>
            <ul>
                @foreach (var item in Model.Genres)
                {
                    <li>@item</li>
                }
            </ul>
        </dd>


        <dd class="col-sm-10">
            <b>Available on: </b>
            <ul>
                @foreach (var item in Model.Platforms)
                {
                    <li>@item</li>
                }
            </ul>
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    <a asp-action="Index">Back to List</a>
</div>
